# Stage 1: Build dependencies (optimized caching)
FROM python:3.9-slim as builder

WORKDIR /app
COPY requirements.txt ./

# Install build + runtime deps (separate layers for caching)
RUN apt-get update && apt-get install -y --no-install-recommends gcc python3-dev \
    && pip install --user -r requirements.txt \
    && apt-get remove -y gcc python3-dev \
    && apt-get autoremove -y \
    && rm -rf /var/lib/apt/lists/*

# Stage 2: Final image (minimal)
FROM python:3.9-slim
WORKDIR /app

# Copy only necessary files from builder
COPY --from=builder /root/.local /root/.local
COPY . .

# Ensure scripts are executable & PATH includes local pip
RUN chmod +x ./scripts/*.sh \
    && export PATH=/root/.local/bin:$PATH

# Uvicorn fix: Explicitly bind to 0.0.0.0
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]